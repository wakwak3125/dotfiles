        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "en"
              }
            },
            {
              "key_code": "t",
              "modifiers": ["control"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.mitchellh\\.ghostty$"
              ]
            }
          ]
        }
      ]
    }
